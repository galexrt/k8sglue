{{ pillar['headers']['salt']['file'] }}
{% set nameservers = pillar.get('nameservers', ["1.1.1.1", "8.8.8.8"]) -%}
make_resolv_conf(){
    rscf="$(mktemp "${TMPDIR:-/tmp}/XXXXXX")"
    [[ -z "${rscf}" ]] && return
    cat << EOF > "${rscf}"
{%- for ns in nameservers %}
nameserver {{ ns }}
{%- endfor %}
EOF

    change_resolv_conf "${rscf}"
    rm -f "${rscf}"
}
